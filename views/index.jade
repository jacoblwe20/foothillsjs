#index
  .row
    .span1 &nbsp;
    .span6
      div.icon_head
        i.icon-curlies
      h1 
        span= info.name
      hr

      div.description!= info.description

    .span1 &nbsp;
    .span4
      .sidebar

        h3 
          i.icon-users 
          span Active Members

        ul.unstyled.members
        .more 
          i.icon-arrow-right
          a(href=info.link + 'members') view all #{info.members} #{info.who}
